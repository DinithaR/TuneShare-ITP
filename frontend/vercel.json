{
	"version": 2,
	"framework": "vite",
	"installCommand": "npm install",
	"buildCommand": "npm run build",
	"outputDirectory": "dist",
	"rewrites": [
		{
			"source": "/api/:path*",
			"destination": "https://{env:BACKEND_URL}/api/:path*"
		},
		{
			"source": "/(.*)",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{ "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
			]
		}
	]
}
